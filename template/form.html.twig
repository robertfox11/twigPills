{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <p class="important">
        Welcome to my awesome homepage.
    </p>
{% endblock %}
{% block form %}
    <div>
        <form>
            {% import "formulario.html.twig" as forms %}
            <p>Name{{ forms.input('username') }}</p>
            <p>Email{{ forms.input('email', email, 'email') }}</p>
            <p>Number{{ forms.input('number', number, 'number') }}</p>
            <p>Password{{ forms.input('password', null, 'password') }}</p>
        
        </form>
    </div>
{% endblock %}


