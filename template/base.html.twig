    {% endblock form %}

    {% block sidebar %}
    {% endblock %}
    
    <div id="footer">
        {% block footer %} &copy; Copyright 2020 by <a href="http://domain.invalid/">you</a>. {% endblock %}
    </div>
</body>

</html>